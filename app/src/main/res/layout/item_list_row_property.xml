<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    app:cardCornerRadius="1dp"
    app:cardUseCompatPadding="true"
    android:theme="@style/CardView.Light"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_list_row_img"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:contentDescription="'property-photo'"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/avatar" />

        <TextView
            android:id="@+id/item_list_row_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Location"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/item_list_row_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Uploading user"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_list_row_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/black"
                android:text="Description"
                android:fontFamily="sans-serif-condensed-light"
                android:textSize="19sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_list_row_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Price"
            android:fontFamily="sans-serif-condensed-light"
            android:layout_marginStart="4dp"

            android:textSize="17sp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>